<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity"
      spacing="10.0" xmlns="http://javafx.com/javafx/8.0.162-ea"
      fx:controller="de.uniks.se1ss19teamb.rbsg.ui.UnitObjectController">
    <children>
        <Label fx:id="labelUnitType" layoutY="10.0" text="Label" wrapText="true"/>
        <ImageView fitHeight="37.0" fitWidth="72.0" layoutX="14.0" layoutY="4.0" pickOnBounds="true"
                   preserveRatio="true" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="4.0"/>
        <Label layoutX="101.0" layoutY="10.0" text="Anzahl: " AnchorPane.leftAnchor="100.0"/>
        <Label fx:id="labelUnitCount" layoutX="143.0" layoutY="10.0" text="#" AnchorPane.leftAnchor="143.0"/>
        <Button fx:id="btnIncrease" layoutX="158.0" layoutY="6.0" mnemonicParsing="false"
                onMouseClicked="#increaseCount" prefWidth="30.0" text="+" AnchorPane.rightAnchor="45.0"/>
        <Button fx:id="btnDecrease" layoutX="187.0" layoutY="6.0" mnemonicParsing="false"
                onMouseClicked="#decreaseCount" prefWidth="30.0" text="-" AnchorPane.rightAnchor="8.0"/>
    </children>
    <stylesheets>
        <URL value="@../css/base.css"/>
        <URL value="@../css/darkDesign.css"/>
    </stylesheets>
</HBox>
