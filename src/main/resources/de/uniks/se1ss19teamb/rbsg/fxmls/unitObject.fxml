<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<HBox xmlns:fx="http://javafx.com/fxml/1" fx:id="root" alignment="CENTER" maxWidth="500.0" spacing="10.0"
      HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/8.0.221"
      fx:controller="de.uniks.se1ss19teamb.rbsg.ui.UnitObjectController">
    <children>
        <Pane fx:id="imageUnitType"/>
        <Label fx:id="labelUnitType" layoutY="10.0" text="Label" wrapText="true"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label layoutX="101.0" layoutY="10.0" text="Anzahl: " AnchorPane.leftAnchor="100.0"/>
        <Label fx:id="labelUnitCount" layoutX="143.0" layoutY="10.0" text="#" AnchorPane.leftAnchor="143.0"/>
        <Button fx:id="btnIncrease" layoutX="158.0" layoutY="6.0" mnemonicParsing="false"
                onMouseClicked="#increaseCount" prefWidth="30.0" text="+" AnchorPane.rightAnchor="45.0"/>
        <Button fx:id="btnDecrease" disable="true" layoutX="187.0" layoutY="6.0" mnemonicParsing="false"
                onMouseClicked="#decreaseCount" prefWidth="30.0" text="-" AnchorPane.rightAnchor="8.0"/>
    </children>
    <padding>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
    </padding>
   <stylesheets>
      <URL value="@../css/whiteDesign.css" />
      <URL value="@../css/darkDesign.css" />
   </stylesheets>
</HBox>
