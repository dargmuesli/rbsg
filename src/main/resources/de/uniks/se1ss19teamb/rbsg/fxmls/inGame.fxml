<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXHamburger?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="apnRoot" stylesheets="@../css/whiteDesign.css" xmlns="http://javafx.com/javafx/8.0.999-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.se1ss19teamb.rbsg.ui.InGameController">
    <BorderPane prefHeight="200.0" prefWidth="200.0"/>
    <Pane fx:id="miniMap" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
    <AnchorPane fx:id="apnFade" stylesheets="@../css/darkDesign.css" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="5.0" VBox.vgrow="ALWAYS">
            <HBox fx:id="head" alignment="CENTER_RIGHT" spacing="5" AnchorPane.rightAnchor="5.0"
                  AnchorPane.topAnchor="5.0">
                <JFXButton fx:id="btnBigger" mnemonicParsing="false" onAction="#bigger" text="+" visible="false"/>
                <JFXButton fx:id="btnSmaller" mnemonicParsing="false" onAction="#smaller" prefHeight="27.0"
                           prefWidth="27.0" text="-" visible="false"/>
                <JFXButton fx:id="btnBack" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false"
                           onAction="#leaveGame" visible="false">
                    <graphic>
                        <FontAwesomeIconView glyphName="REPLY"/>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="btnLogout" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false"
                           onAction="#logout" visible="false">
                    <graphic>
                        <FontAwesomeIconView boundsType="VISUAL" glyphName="SIGN_OUT" size="15"/>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="btnFullscreen" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false"
                           onAction="#toggleFullscreen" visible="false">
                    <graphic>
                        <FontAwesomeIconView boundsType="VISUAL" glyphName="EXPAND" size="15"/>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="btnMiniMap" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false"
                           onAction="#toggleMinimap" visible="false">
                    <graphic>
                        <FontAwesomeIconView boundsType="VISUAL" glyphName="MAP" size="15"/>
                    </graphic>
                </JFXButton>
                <JFXHamburger fx:id="hamburgerMenu" prefHeight="0.0" prefWidth="47.0"/>
            </HBox>
            <AnchorPane>
                <HBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <JFXToggleButton fx:id="autoMode" alignment="CENTER_LEFT" contentDisplay="RIGHT"
                                     mnemonicParsing="false" onAction="#autoMode" prefHeight="33.0" prefWidth="108.0"
                                     size="5.0" text="Automode: " AnchorPane.leftAnchor="5.0">
                    </JFXToggleButton>
                    <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                        <AnchorPane fx:id="turnUI">
                        </AnchorPane>
                    </HBox>
                </HBox>
            </AnchorPane>
            <StackPane prefWidth="200.0">
                <ScrollPane fx:id="mapScrollPane" hbarPolicy="NEVER" pannable="true" prefWidth="200.0"
                            vbarPolicy="NEVER">
                    <GridPane fx:id="gameGrid">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                    </GridPane>
                </ScrollPane>
            </StackPane>
        </VBox>
    </AnchorPane>
    <AnchorPane fx:id="leaveGame" layoutX="50.0" layoutY="40.0" prefHeight="100.0" prefWidth="200.0"
                style="-fx-background-color: #2A2E37;" stylesheets="@../css/darkDesign.css" visible="false">
        <JFXButton fx:id="btnNo" layoutX="110.0" layoutY="47.0" mnemonicParsing="false" onAction="#leaveGame"
                   text="No" visible="false"/>
        <JFXButton fx:id="btnYes" layoutX="55.0" layoutY="47.0" mnemonicParsing="false" onAction="#leaveGame"
                   text="Yes" visible="false"/>
        <Label layoutX="73.0" layoutY="14.0" prefHeight="17.0" prefWidth="54.0" text="Concede?"
               textAlignment="CENTER" visible="false"/>
    </AnchorPane>
    <VBox fx:id="vBoxWinScreen" alignment="CENTER" style="-fx-background-color: rgba(0, 0, 0, 0.6)" visible="false"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER" style="-fx-background-color: transparent" VBox.vgrow="ALWAYS">
            <AnchorPane fx:id="winScreenPane" VBox.vgrow="ALWAYS"/>
        </HBox>
    </VBox>
</AnchorPane>