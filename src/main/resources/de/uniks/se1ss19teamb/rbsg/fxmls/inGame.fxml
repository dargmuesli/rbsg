<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXHamburger?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.net.URL?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="inGameScreen1" xmlns="http://javafx.com/javafx/8.0.172-ea"
            fx:controller="de.uniks.se1ss19teamb.rbsg.ui.InGameController">
    <AnchorPane fx:id="inGameScreen" stylesheets="@../css/darkDesign.css" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="5.0" VBox.vgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER_RIGHT" spacing="5" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
                    <JFXButton fx:id="btnBack" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false"
                               onAction="#setOnAction" visible="false">
                        <graphic>
                            <FontAwesomeIconView glyphName="REPLY"/>
                        </graphic>
                    </JFXButton>
                    <JFXButton fx:id="btnLogout" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false"
                               onAction="#setOnAction" visible="false">
                        <graphic>
                            <FontAwesomeIconView boundsType="VISUAL" glyphName="SIGN_OUT" size="15"/>
                        </graphic>
                    </JFXButton>
                    <JFXButton fx:id="btnFullscreen" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false"
                               onAction="#setOnAction" visible="false">
                        <graphic>
                            <FontAwesomeIconView boundsType="VISUAL" glyphName="EXPAND" size="15"/>
                        </graphic>
                    </JFXButton>
                    <JFXHamburger fx:id="hamburgerMenu" prefHeight="0.0" prefWidth="47.0"/>
                </HBox>
                <StackPane prefWidth="200.0">
                    <children>
                        <ScrollPane fx:id="mapScrollPane" prefWidth="200.0">
                            <content>
                                <GridPane fx:id="gameGrid">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="64.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="64.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                </GridPane>
                            </content>
                        </ScrollPane>
                    </children>
                </StackPane>
            </children>
        </VBox>
    </AnchorPane>
    <stylesheets>
        <URL value="@../css/base.css"/>
        <URL value="@../css/darkDesign.css"/>
    </stylesheets>
</AnchorPane>
