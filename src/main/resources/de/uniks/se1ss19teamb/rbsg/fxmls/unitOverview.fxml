<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../css/dark-design2.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.se1ss19teamb.rbsg.ui.UnitOverviewController">
    <HBox alignment="CENTER" spacing="10.0">
        <children>
            <ImageView pickOnBounds="true" preserveRatio="true" />
         <Button fx:id="btnLoad" mnemonicParsing="false" onMouseClicked="#loadConfiguration" text="Load" />
         <Button fx:id="btnSave" mnemonicParsing="false" text="Save" />
            <Label fx:id="lblCount" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Anzahl: x" HBox.hgrow="ALWAYS" />
            <JFXButton fx:id="btnMore" mnemonicParsing="false" onAction="#eventHandler" prefHeight="30.0" prefWidth="30.0" text="+" />
            <JFXButton fx:id="btnLess" mnemonicParsing="false" onAction="#eventHandler" prefHeight="30.0" prefWidth="30.0" text="-" />
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </HBox>
   <ScrollPane prefHeight="200.0" prefWidth="200.0">
      <content>
         <ListView fx:id="unitList" prefHeight="200.0" prefWidth="265.0" />
      </content></ScrollPane>
</VBox>
