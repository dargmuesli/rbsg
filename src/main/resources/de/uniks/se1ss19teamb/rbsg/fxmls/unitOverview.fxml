<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/dark-design2.css"
      xmlns="http://javafx.com/javafx/8.0.162-ea" fx:controller="de.uniks.se1ss19teamb.rbsg.ui.UnitOverviewController">
    <HBox alignment="CENTER" spacing="10.0">
        <children>
            <ImageView pickOnBounds="true" preserveRatio="true"/>
            <Label fx:id="lblCount" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Anzahl: x"
                   HBox.hgrow="ALWAYS"/>
            <JFXButton fx:id="btnMore" mnemonicParsing="false" onAction="#eventHandler" prefHeight="30.0"
                       prefWidth="30.0" text="+"/>
            <JFXButton fx:id="btnLess" mnemonicParsing="false" onAction="#eventHandler" prefHeight="30.0"
                       prefWidth="30.0" text="-"/>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </HBox>
    <TextArea/>
</VBox>
