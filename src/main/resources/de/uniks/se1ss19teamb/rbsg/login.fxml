      <HBox alignment="CENTER" prefHeight="45.0" prefWidth="400.0" style="-fx-spacing: 10;">
         <children>
            <Label text="Username:" />
            <TextField fx:id="userName" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="41.0" prefWidth="400.0" style="-fx-spacing: 10;">
         <children>
            <Label text="Password:" />
            <TextField fx:id="password" />
         </children>
