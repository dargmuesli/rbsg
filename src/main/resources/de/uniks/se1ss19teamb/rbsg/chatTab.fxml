<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTabPane?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" stylesheets="@dark-design2.css" xmlns="http://javafx.com/javafx/8.0.162-ea"
      fx:controller="de.uniks.se1ss19teamb.rbsg.ui.ChatTabController">
    <JFXTabPane fx:id="chatPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <Tab closable="false" text="All">
            <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="200.0" minWidth="400.0">
                <TextArea fx:id="textArea" editable="false"/>
            </ScrollPane>
        </Tab>
    </JFXTabPane>
    <HBox alignment="CENTER" VBox.vgrow="NEVER">
        <JFXTextField fx:id="message" onAction="#onEnter" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0"/>
            </HBox.margin>
        </JFXTextField>
        <Button fx:id="btnSend" alignment="CENTER" onAction="#setOnAction">
            <graphic>
                <FontAwesomeIconView glyphName="SEND" size="15"/>
            </graphic>
        </Button>
        <VBox.margin>
            <Insets left="5.0" right="5.0"/>
        </VBox.margin>
    </HBox>
</VBox>
