<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@dark-design.css"
            xmlns="http://javafx.com/javafx/8.0.162-ea" fx:controller="de.uniks.se1ss19teamb.rbsg.ui.RegisterController">
    <AnchorPane fx:id="registerScreen" stylesheets="@dark-design.css" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <AnchorPane fx:id="errorContainer" layoutX="200.0" layoutY="20.0" prefHeight="50.0" AnchorPane.leftAnchor="25.0"
                    AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0"/>
        <VBox alignment="CENTER" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <FontAwesomeIconView glyphName="USER_CIRCLE" size="40"/>
            <JFXTextField fx:id="userName" labelFloat="true" maxHeight="40.0" maxWidth="300.0" prefHeight="40.0"
                          prefWidth="300.0" promptText="Username"/>
            <JFXPasswordField fx:id="password" labelFloat="true" maxHeight="40.0" maxWidth="300.0" prefHeight="40.0"
                              prefWidth="300.0" promptText="Password"/>
            <JFXPasswordField fx:id="confirmPassword" labelFloat="true" maxHeight="40.0" maxWidth="300.0"
                              prefHeight="40.0" prefWidth="300.0" promptText="Confirm Password"/>
            <HBox alignment="CENTER" spacing="25.0">
                <JFXButton fx:id="btnConfirm" onAction="#eventHandler" prefWidth="110.0" text="Confirm"/>
                <JFXButton fx:id="btnCancel" onAction="#eventHandler" prefWidth="110.0" text="Cancel"/>
            </HBox>
        </VBox>
    </AnchorPane>
</AnchorPane>
